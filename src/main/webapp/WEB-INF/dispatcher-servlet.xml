<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
    <property name="host" value="smtp.example.com"/>
    <property name="port" value="587"/>
    <property name="username" value="your-email@example.com"/>
    <property name="password" value="your-email-password"/>
    <property name="javaMailProperties">
        <props>
            <prop key="mail.smtp.auth">true</prop>
            <prop key="mail.smtp.starttls.enable">true</prop>
            <prop key="mail.smtp.timeout">25000</prop>
            <prop key="mail.smtp.connectiontimeout">25000</prop>
        </props>
    </property>
</bean>

<!--  java mail sender start	 -->
	
	
	
	
	
	<bean id="jacksonMessageConverter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter">
	<property name="supportedMediaTypes" value="application/json"/>
	</bean>
	<bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
	    <property name="messageConverters">
	        <list>
	            <ref bean="jacksonMessageConverter" />
	        </list>
	    </property>
	</bean>
	
	 <bean id="applicationContextProvder"  class="com.unihyr.util.ApplicationContextProvider" />
	 
	 
</beans>
